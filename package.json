{
  "name": "arqivo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.7.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev:api": "pnpm --filter @arqivo/api dev",
    "dev:web": "pnpm --filter web dev",
    "dev": "concurrently -n api,web -c green,cyan \"pnpm dev:api\" \"pnpm dev:web\"",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.5.4"
  }
}
