{
  "name": "@arqivo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate": "tsx src/migrate.ts",
    "test": "vitest run tests --exclude tests/strict-auth",
    "test:strict": "STRICT_AUTH=true DEV_AUTH_BYPASS= CLERK_SECRET_KEY=sk_test_dummy vitest run tests/strict-auth",
    "test:all": "pnpm -C services/api test && pnpm -C services/api test:strict",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo \"(no lint yet)\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.882.0",
    "@clerk/backend": "^1.34.0",
    "@fastify/cors": "^10.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.6.0",
    "pg": "^8.12.0",
    "raw-body": "^2.5.2",
    "redis": "^4.7.0",
    "stripe": "^16.6.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.2",
    "@opentelemetry/sdk-node": "^0.204.0",
    "@sentry/node": "^10.10.0",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.10.6",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/runner": "^1.6.0",
    "get-port": "^7.1.0",
    "supertest": "^7.0.0",
    "tsx": "^4.15.6",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
